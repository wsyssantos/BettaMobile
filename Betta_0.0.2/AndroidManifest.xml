<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="br.com.betta"
      android:versionCode="1"
      android:versionName="1.0">

	<uses-permission android:name="android.permission.VIBRATE" />	
	<uses-permission android:name="android.permission.INTERNET" />
	
	<!-- Deixa a aplicação sem titulos e rodando em full screen -->
    <application android:icon="@drawable/betta_logo" android:label="@string/app_name" android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity android:name="MediaStream"
                  android:label="@string/app_name">
        </activity>
        
        <activity android:name="ListCategorias"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name="ListCategoriaComedia"
                  android:label="@string/app_name">             
        </activity>

    </application>
</manifest>